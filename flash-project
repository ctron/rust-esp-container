#!/usr/bin/env bash

set -e

source "$IDF_PATH/export.sh"

"$IDF_PATH/components/esptool_py/esptool/esptool.py" \
     --chip esp32 \
     --port /dev/ttyUSB0 \
     --baud 115200 \
     --before default_reset \
     --after hard_reset \
     write_flash \
     -z \
     --flash_mode dio \
     --flash_freq 40m \
     --flash_size detect \
     0x10000 build/esp-app.bin \
     0x8000 build/partitions_singleapp.bin
